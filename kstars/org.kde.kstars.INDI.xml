<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.kde.kstars.INDI">
    <method name="startINDI">
    <arg type="b" direction="out"/>
    <arg name="port" type="s" direction="in"/>
    <arg name="drivers" type="as" direction="in"/>
    </method>   
    <method name="stopINDI">
    <arg type="b" direction="out"/>
    <arg name="port" type="s" direction="in"/>
    </method>
    <method name="connectINDI">
        <arg type="b" direction="out"/>
        <arg name="host" type="s" direction="in"/>
        <arg name="port" type="s" direction="in"/>
    </method>
    <method name="disconnectINDI">
        <arg type="b" direction="out"/>
        <arg name="host" type="s" direction="in"/>
        <arg name="port" type="s" direction="in"/>
    </method>
    <method name="getINDIProperties">
        <arg type="as" direction="out"/>
        <arg name="device" type="s" direction="in"/>
    </method>
    <method name="getINDIPropertyState">
        <arg type="s" direction="out"/>
        <arg name="device" type="s" direction="in"/>
        <arg name="property" type="s" direction="in"/>
    </method>
    <method name="sendINDIProperty">
        <arg type="b" direction="out"/>
        <arg name="device" type="s" direction="in"/>
        <arg name="property" type="s" direction="in"/>
    </method>
    <method name="setINDISwitch">
        <arg type="b" direction="out"/>
        <arg name="device" type="s" direction="in"/>
        <arg name="property" type="s" direction="in"/>
        <arg name="switchName" type="s" direction="in"/>
        <arg name="status" type="s" direction="in"/>
    </method>
    <method name="getINDISwitch">
        <arg type="s" direction="out"/>
        <arg name="device" type="s" direction="in"/>
        <arg name="property" type="s" direction="in"/>
        <arg name="switchName" type="s" direction="in"/>
    </method>
    <method name="setINDIText">
        <arg type="b" direction="out"/>
        <arg name="device" type="s" direction="in"/>
        <arg name="property" type="s" direction="in"/>
        <arg name="textName" type="s" direction="in"/>
        <arg name="text" type="s" direction="in"/>
    </method>
    <method name="getINDIText">
        <arg type="s" direction="out"/>
        <arg name="device" type="s" direction="in"/>
        <arg name="property" type="s" direction="in"/>
        <arg name="textName" type="s" direction="in"/>
    </method>
    <method name="setINDINumber">
        <arg type="b" direction="out"/>
        <arg name="device" type="s" direction="in"/>
        <arg name="property" type="s" direction="in"/>
        <arg name="numberName" type="s" direction="in"/>
        <arg name="value" type="d" direction="in"/>
    </method>
    <method name="getINDINumber">
        <arg type="d" direction="out"/>
        <arg name="device" type="s" direction="in"/>
        <arg name="property" type="s" direction="in"/>
        <arg name="numberName" type="s" direction="in"/>
    </method>
    <method name="getINDIBLOB">
        <arg type="ay" direction="out"/>
        <arg name="device" type="s" direction="in"/>
        <arg name="property" type="s" direction="in"/>
        <arg name="blobName" type="s" direction="in"/>
        <arg name="blobFormat" type="s" direction="out"/>
        <arg name="size" type="ui" direction="out"/>
    </method>
  </interface>
</node>

